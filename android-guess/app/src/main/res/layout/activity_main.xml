<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The computer only considers a number \n                     from 1 to 9999"
        android:id="@+id/tv_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />


    <ImageView
        android:id="@+id/image_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/up_right"
        android:visibility="invisible">

    </ImageView>

    <EditText
        android:id="@+id/ed_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:maxLength="4"
        android:hint="# # # #"
        android:textSize="22sp"></EditText>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_low"
        android:src="@drawable/low_wrong"
        android:visibility="invisible"
        android:layout_below="@id/ed_1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        ></ImageView>


    <Button
        android:id="@+id/btn_check"
        android:layout_width="160dp"
        android:layout_height="157dp"
        android:layout_below="@id/image_low"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="check"
        android:visibility="invisible"
        android:background="@drawable/circle">


    </Button>
</RelativeLayout>